                	scanf("%c", &b);
                    clsc();
                    
                    reserva: 
                        printf("Reserva de asientos \n\n\n");
                        printf("Ingrese el asiento que desea reservar (0 para regresar): ");
                        scanf("%s", &asiento);
                        scanf("%c", &b);
                        
                        if(asiento == "0"){
                            goto menu;
                        }
                        if(strlen(asiento) == 2){
                           
                            } else {
                            goto reserva;
                        }
                        
                } else if(opcion == 2){
                    
                        goto menu;
                } else if(opcion == 3){
                    
                        goto menu;
                } else if(opcion == 4){
