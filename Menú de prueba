#include<stdio.h>
#include<stdlib.h>

int main (void){
	int opcion=0, uno=0, dos=0, vuelo=0;
	printf("\nBienvenido al MIALv001!\n");
	printf("\n\n");
        
        printf("En que puedo ayudarle?\n");
        printf("\n\n");
        printf("Ingrese el numero de vuelo:\n");
        scanf("%d", &vuelo);
		printf("VUELO: MIAL%d\n\n", vuelo);
	do{
		void clearscreen()
{
    system("@cls||clear");
}
        
		printf("MENU DE OPCIONES\n\n");
		printf("\n\n");
		printf("VUELO: MIAL%d\n\n", vuelo);
		printf("\n\n");
        printf("1. Reservar su asiento\n");
        printf("2. Ver asientos disponibles\n");
        //printf("3. Ver sugerencia de asientos\n");
        printf("3. Ver resumen\n");
        printf("4. Salir\n");
        printf("\n\n");
        
        printf("Ingrese una opcion\n");
        scanf("%d", &opcion);
        switch (opcion){
        	case 1:
{
    system("@cls||clear");
}
            //PRUEBAS DEL MENU:SUMA DE NUMEROS PARA LA OPCION 1
            printf("Ingrese un valor\n");
            scanf("%d", &uno);
            printf("Ingrese el segundo valor\n");
            scanf("%d", &dos);
            printf("La suma de %d y %d es: %d", uno, dos, uno+dos);
            getch();
            break;
            
            
            case 2:
{
    system("@cls||clear");
}
            //PRUEBAS DEL MENU:MULTIPLICACION DE NUMEROS PARA LA OPCION 2
            printf("Ingrese un valor\n");
            scanf("%d", &uno);
            printf("Ingrese el segundo valor\n");
            scanf("%d", &dos);
            printf("La multiplicacion de %d y %d es: %d", uno, dos, uno*dos);
            getch();
            break;
            
            
        	case 3:
{
    system("@cls||clear");
}
            //PRUEBAS DEL MENU:RESTA DE NUMEROS PARA LA OPCION 3
            printf("Ingrese un valor\n");
            scanf("%d", &uno);
            printf("Ingrese el segundo valor\n");
            scanf("%d", &dos);
            printf("La resta de %d y %d es: %d", uno, dos, uno-dos);
            getch();
            break;
            
            case 4:
            	break;
            
		} 
        
	}while (opcion !=4);
		return 0;
	 
	 
}
